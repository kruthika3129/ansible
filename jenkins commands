# Check if Jenkins is installed
dpkg -l | grep jenkins

# Stop Jenkins if it's running
sudo systemctl stop jenkins

# Uninstall Jenkins and remove configuration files
sudo apt remove --purge -y jenkins
sudo apt autoremove -y

# Delete remaining Jenkins files and directories
sudo rm -rf /var/lib/jenkins
sudo rm -rf /etc/jenkins
sudo rm -rf /var/log/jenkins
sudo rm -rf /usr/share/jenkins

# Remove Jenkins firewall rule (if it was added)
sudo ufw delete allow 8080

# Final check to confirm Jenkins is gone
dpkg -l | grep jenkins
